@model IEnumerable<TRAQ_Assessment_MVC.Models.Person.ViewPersonViewModel>

@{
    ViewData["Title"] = "Index";
}
<form asp-controller="Person" asp-action="Search" method="get">
    <input type="text" name="query" class="form-control" placeholder="Search..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<a class="navbar-brand btn btn-primary align-content-center" asp-area="" asp-controller="Person" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                    <a class="navbar-brand btn btn-success" asp-area="" asp-controller="Person" asp-action="Update" asp-route-id="@item.Code">Edit</a>
                <a class="navbar-brand btn btn-info" asp-area="" asp-controller="Person" asp-action="Details" asp-route-id="@item.Code">View</a>
                <a class="navbar-brand btn btn-danger" asp-area="" asp-controller="Person" asp-action="Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
