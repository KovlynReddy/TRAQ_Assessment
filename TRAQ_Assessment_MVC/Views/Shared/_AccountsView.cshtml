@model IEnumerable<TRAQ_Assessment_MVC.Models.Account.ViewAccountViewModel>


<a class="navbar-brand btn btn-primary align-content-center" asp-area="" asp-controller="Account" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Outstanding_Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Outstanding_Balance)
            </td>
            <td>
                    <a class="navbar-brand btn btn-success" asp-area="" asp-controller="Account" asp-action="Update">edit</a>
                    <a class="navbar-brand btn btn-info" asp-area="" asp-controller="Account" asp-action="Details" asp-route-id="@item.Code" asp-route-holderId="@item.Person_Code">View</a>
                    <a class="navbar-brand btn btn-danger" asp-area="" asp-controller="Account" asp-action="Delete">delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
